<header>
  <link
    href="https://fonts.googleapis.com/css?family=Karla:400,700"
    rel="stylesheet"
  />
  <nav
    class="navbar navbar-expand-md navbar-dark"
    style="background-color:darkcyan"
  >
    <a
      class="navbar-brand"
      style="font-family: 'Karla', sans-serif; font-weight: bold;"
      href="/urls"
      >TinyURL</a
    >
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <% if (!username) { %>
      <div class="navbar-nav" style="margin: 0.3em 0.6em">
        <form class="form-inline" action="/login" method="GET">
          <button type="submit" class="btn btn-outline-light">Sign In</button>
        </form>
      </div>
      <div class="navbar-nav " style="margin: 0.3em 0em 0.3em 0.6em">
        <form class="form-inline" action="/register" method="GET">
          <button type="submit" class="btn btn-outline-light">Register</button>
        </form>
      </div>
      </div>
  
      <% } else { %>
      <div>
        <form class="form-inline" action="/logout" method="POST">
          <span class="navbar-text" style="margin: 0.15em 0.4em;color: white;font-size: large;">Hey,
            <%= username%></span>
          <button type="submit" class="btn btn-outline-light" style="margin: 0.3em 0em 0.3em 0.6em">Sign Out</button>
          <% } %>
        </form>
      </div>
  </nav>
</header>
